<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bokecc.mapper.UserJwtKeyMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.bokecc.model.UserJwtKey">
        <id column="id" property="id" />
        <result column="app_key" property="appKey" />
        <result column="app_secret" property="appSecret" />
        <result column="department" property="department" />
        <result column="service_name" property="serviceName" />
        <result column="remark" property="remark" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <select id="selectByAppKey" resultMap="BaseResultMap">
        select app_key, app_secret, department, service_name
        from user_jwt_key
        where app_key = #{appKey}
    </select>

</mapper>
